mixin topbanner(h1, image)
    .topbanner 
        .topslider-item   
            .topslider-container
                h1.topslider-title= h1
            .topslider-background(style=image)   
    .topbanner-nav
        a(href="#").topslider-icon#js-bottomscroll            
            img.topslider-icon-move(src="/images/svg/pump_move.svg" alt="")(width="40")(height="40")