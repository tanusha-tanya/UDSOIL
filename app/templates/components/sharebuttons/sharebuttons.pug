.sharebuttons(data-aos="fade-left" data-aos-duration="1000")
    a(href="https://www.facebook.com" target="_blank").sharebuttons-link.sharebuttons-link__fb
        svg.sharebuttons-svg(role="img")(width="24")(height="24"): use(xlink:href="#facebook")
    a(href="https://vk.com/" target="_blank").sharebuttons-link.sharebuttons-link__vk
        svg.sharebuttons-svg(role="img")(width="16")(height="9"): use(xlink:href="#vk")
    a(href="https://ok.ru/" target="_blank").sharebuttons-link.sharebuttons-link__ok
        svg.sharebuttons-svg(role="img")(width="9")(height="16"): use(xlink:href="#ok")